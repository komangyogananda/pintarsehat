<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bluePrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/bluePrimary</item>
    </style>

    <style name="rounded_shape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="button_search_selector" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="shapeAppearance">@style/rounded_shape</item>
        <item name="android:textColor">@color/bluePrimary</item>
    </style>

    <style name="chips" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textColor">@color/bluePrimary</item>
        <item name="android:backgroundTint">@color/bluePrimary10</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>

</resources>
