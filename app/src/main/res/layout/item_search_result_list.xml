<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp"
    android:id="@+id/layout_search_result"
    android:background="@drawable/rounded_white_frame"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:clickable="false"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/search_result_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daging â€¢ 1 Mangkok"
            android:clickable="false"
            android:textAllCaps="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/search_result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Daging Ayam"
            android:clickable="false"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:id="@+id/food_summary_subtitle"
            android:layout_marginTop="4dp"
            android:textColor="@color/bluePrimary"
            android:text="Karbohidrat 100g, Lemak 100g, Kalori 100 kcal, Protein 100g"/>

    </LinearLayout>

</RelativeLayout>